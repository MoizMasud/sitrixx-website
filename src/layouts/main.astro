---
import '../../generated/fonts.css';
import '../site-components/global.css';
import '../styles/global.css';

const { pageClass = '', title = 'Sitrixx - Modern Websites with Smart Automations' } = Astro.props;
---

<html lang="en" class={pageClass}>
<head>
<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="alternate icon" type="image/png" href="/favicon.ico" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
<meta name="generator" content={Astro.generator} />
<title>{title}</title>
</head>
<!-- Dark mode class injection point - will be replaced with `dark` class based on your site palette -->
<body class="__DARK_MODE_CLASS__">
<slot />
</body>
</html>

<style is:global>
/* Mobile viewport fixes */
html {
overflow-x: hidden;
width: 100%;
max-width: 100vw;
}

body {
overflow-x: hidden;
width: 100%;
max-width: 100vw;
min-height: 100vh;
min-height: -webkit-fill-available;
position: relative;
}

/* Prevent horizontal scroll on all containers */
* {
max-width: 100%;
}

/* Page-specific overrides */
html.splash main { 
display: flex !important; 
}

html.splash ol,
html.splash ul { 
padding-left: 0 !important; 
margin: 0 !important; 
}
</style>
