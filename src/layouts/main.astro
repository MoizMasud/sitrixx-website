---
import '../../generated/fonts.css';
import '../site-components/global.css';
import '../styles/global.css';

const { 
pageClass = '', 
title = 'Sitrixx - Modern Websites with Smart Automations',
description = 'Premium websites with intelligent automation for forward-thinking businesses. We build modern, conversion-focused websites with smart booking, AI chatbots, and SMS automation.'
} = Astro.props;

const baseUrl = Astro.url.origin;
const currentUrl = Astro.url.href;
const faviconUrl = `${baseUrl}/favicon.svg`;
---

<html lang="en" class={pageClass}>
<head>
<meta charset="utf-8" />

<!-- Favicons - Sitrixx branding -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="alternate icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/favicon.svg" />
<link rel="mask-icon" href="/favicon.svg" color="#4F46E5" />
<link rel="shortcut icon" href="/favicon.svg" />

<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={faviconUrl} />
<meta property="og:image:type" content="image/svg+xml" />
<meta property="og:image:alt" content="Sitrixx - Premium Websites with Smart Automation" />
<meta property="og:image:width" content="512" />
<meta property="og:image:height" content="512" />
<meta property="og:site_name" content="Sitrixx" />

<!-- Twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:url" content={currentUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={faviconUrl} />
<meta name="twitter:image:alt" content="Sitrixx - Premium Websites with Smart Automation" />

<!-- iOS Web App -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="apple-mobile-web-app-title" content="Sitrixx" />

<!-- Theme Color - Sitrixx brand colors -->
<meta name="theme-color" content="#4F46E5" media="(prefers-color-scheme: light)" />
<meta name="theme-color" content="#4F46E5" media="(prefers-color-scheme: dark)" />
<meta name="msapplication-TileColor" content="#4F46E5" />
<meta name="msapplication-TileImage" content="/favicon.svg" />
</head>
<body>
<slot />
</body>
</html>

<style is:global>
/* Mobile viewport fixes */
html {
overflow-x: hidden;
width: 100%;
max-width: 100vw;
}

body {
overflow-x: hidden;
width: 100%;
max-width: 100vw;
min-height: 100vh;
min-height: -webkit-fill-available;
position: relative;
}

/* Prevent horizontal scroll on all containers */
* {
max-width: 100%;
}

/* Page-specific overrides */
html.splash main { 
display: flex !important; 
}

html.splash ol,
html.splash ul { 
padding-left: 0 !important; 
margin: 0 !important; 
}
</style>
