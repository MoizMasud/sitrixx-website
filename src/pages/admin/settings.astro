---
import MainLayout from '../../layouts/main.astro';
import AdminLayout from '../../components/AdminLayout';
import { baseUrl } from '../../lib/base-url';
---

<MainLayout title="Settings - Admin - Sitrixx">
  <AdminLayout activePage="settings" client:only="react">
    <div class="max-w-4xl">
      <h1 class="text-5xl md:text-6xl font-black mb-3 tracking-tight text-foreground">
        Settings
      </h1>
      <p class="text-lg text-muted-foreground mb-8">
        Manage your account and preferences
      </p>
      
      <div class="bg-card border-2 rounded-2xl p-8">
        <p class="text-muted-foreground">Settings page coming soon...</p>
      </div>
    </div>
  </AdminLayout>

  <!-- Authentication Guard Script -->
  <script define:vars={{ baseUrl }}>
    const token = localStorage.getItem('sitrixx_token');
    if (!token) {
      window.location.href = baseUrl + '/admin/login';
    }
  </script>

  <!-- Initialize Supabase from npm package -->
  <script>
    import '../../lib/supabase-client';
    console.log('âœ… Supabase client initialized on settings page');
  </script>
</MainLayout>
