---
import MainLayout from '../../layouts/main.astro';
---

<MainLayout 
  title="Admin Login - Sitrixx"
  description="Login to Sitrixx admin dashboard"
>
  <div class="min-h-screen bg-background flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-black mb-2 tracking-tight">Sitrixx</h1>
        <p class="text-muted-foreground">Admin Portal</p>
      </div>

      <div class="bg-card border-2 rounded-3xl p-8 shadow-xl">
        <h2 class="text-2xl font-bold mb-6 tracking-tight">Log In</h2>
        
        <form id="login-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-medium mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl border-2 bg-background focus:outline-none focus:ring-2 focus:ring-primary transition-all"
              placeholder="admin@sitrixx.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium mb-2">
              Password <span class="text-red-500">*</span>
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 rounded-xl border-2 bg-background focus:outline-none focus:ring-2 focus:ring-primary transition-all"
              placeholder="••••••••"
            />
          </div>

          <div class="flex items-center justify-between text-sm">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" class="rounded border-2" />
              <span class="text-muted-foreground">Remember me</span>
            </label>
            <a href="#" class="text-primary hover:underline font-medium">
              Forgot password?
            </a>
          </div>

          <button
            type="submit"
            class="w-full bg-gradient-to-r from-primary to-purple-600 text-white font-bold py-3 px-6 rounded-xl hover:scale-105 transition-all shadow-lg"
          >
            Log In
          </button>
        </form>

        <div class="mt-6 p-4 bg-muted/30 rounded-xl border">
          <p class="text-xs text-muted-foreground">
            <strong>Note:</strong> This form is ready for authentication integration. Connect to your backend auth system to enable login functionality.
          </p>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('login-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // TODO: Replace with actual authentication
      // For now, redirect to admin dashboard
      const email = (document.getElementById('email') as HTMLInputElement).value;
      const password = (document.getElementById('password') as HTMLInputElement).value;
      
      console.log('Login attempt:', { email, password });
      
      // Placeholder: redirect to admin area
      window.location.href = '/admin';
    });
  </script>
</MainLayout>
