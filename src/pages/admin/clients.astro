---
import MainLayout from '../../layouts/main.astro';
import AdminLayout from '../../components/AdminLayout';
import ClientsPage from '../../components/ClientsPage';
import { baseUrl } from '../../lib/base-url';
---

<MainLayout title="Clients - Admin - Sitrixx">
  <AdminLayout activePage="clients" client:only="react">
    <ClientsPage client:only="react" />
  </AdminLayout>

  <!-- Authentication Guard Script -->
  <script define:vars={{ baseUrl }}>
    const token = localStorage.getItem('sitrixx_token');
    if (!token) {
      window.location.href = baseUrl + '/admin/login';
    }
  </script>

  <!-- Initialize Supabase from npm package -->
  <script>
    import '../../lib/supabase-client';
    console.log('âœ… Supabase client initialized on clients page');
  </script>
</MainLayout>
